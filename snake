;ldw t1, SCORE (zero) ; load the score in t1

; BEGIN:clear_leds
clear_leds:
; put LEDS[0..2] to 0x00000000
stw zero, LEDS(zero) ; Set LEDS[0] to 0
stw zero, LEDS+4(zero) ; Set LEDS[1] to 0
stw zero, LEDS+8(zero) ; Set LEDS[2] to 0
ret
; END:clear_leds


